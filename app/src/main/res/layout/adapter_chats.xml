<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llLeftChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            app:civ_border_color="@color/white"
            android:src="@drawable/user_ic"
            app:civ_border_width="@dimen/_2sdp"
            android:id="@+id/profileImgLeft"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginLeft="@dimen/_3sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLeftChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/white_chat_back_left"
                android:padding="@dimen/_10sdp"
                android:text="hi , Olivia Parker"/>

            <TextView
                android:id="@+id/tvLeftDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:text="5 min ago"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llRightChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:civ_border_color="@color/white"
                android:visibility="gone"
                android:src="@drawable/user_ic"
                app:civ_border_width="@dimen/_2sdp"
                android:id="@+id/profileImgRight"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRightChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:background="@drawable/torq_chat_back_right"
                    android:padding="@dimen/_10sdp"
                    android:text="Hello Layladgfkgddssssssssssgludfuhdfiudifuifuhsgdkufhguhdfugdushgdlguhdfughfi"/>

                <TextView
                    android:id="@+id/tvRightDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="1 min ago"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>